@model DentalClinicManagement.ViewModel.BookingModel
@{
    ViewBag.Title = "Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <section id="slider">
        <div class="parallax" style="background-image: url(../Assets/images/blog2d.jpg)">
            <div class="overlay">
                <div class="container">
                    <div class="row">
                        <div class="title">
                            <h1>
                                Booking
                            </h1>
                            <p>At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium voluptatum deleniti atque corrupti</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="welcome">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="welcomeText">
                        <h5>WE’RE</h5>
                        <h2>Open Hours</h2>
                        <p>
                            If you feel tired and stressed
                            after a working day, we are happy to give you an
                            enjoyable and healthy solution to find your balance again.
                        </p>
                        <ul>
                            @foreach (var item in Model._open)
    {
                        <li><i class="far fa-dot-circle" style="float:left"></i><p>@item.schedule: @item.hours</p></li>
}
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="appointment1">
                        <div class="first">Make an Appointment Today!</div>
                        <div class="second">
                            <div class="contactForm">
                                <form class="form-horizontal" action="/Home/Booking" method="post">
                                    <div class="form-group Form">
                                        <input type="text" class="form-control contactInput" name="name" placeholder="Your Name">
                                    </div>
                                    <div class="form-group Form">
                                        <input type="email" class="form-control contactInput" name="email" placeholder="Your Email">
                                    </div>
                                    <div class="form-group Form">
                                        <input type="text" class="form-control contactInput" name="phone" placeholder="Phone Number">
                                    </div>
                                    <div class="form-group Form">
                                        <div class="dropdown">
                                            <button class="btn btn-default dropdown-toggle doctor" type="button" data-toggle="dropdown" data-hover="dropdown">
                                                Doctor Name <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a href="#">Dr.Narmin Nasirova</a></li>
                                                <li><a href="#">Dr.Joye Byond</a></li>
                                                <li class="dropdown">
                                                    <a href="#">Dr.Lala Agayeva</a>

                                                </li>
                                                <li><a href="#">Dr.Tahir semedov</a></li>
                                                <li><a href="#">Dr.Nigar Guliyeva</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="form-group Form">
                                        <input type="date" class="form-control contactInputLast" name="date" placeholder="Text">
                                    </div>
                                    <div class="form-group Form">
                                        <input type="time" class="form-control contactInputLast" name="time" placeholder="Text">
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-info btn-lg submit">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    


