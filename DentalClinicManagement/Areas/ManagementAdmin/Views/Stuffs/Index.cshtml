@model IEnumerable<DentalClinicManagement.Models.Stuff>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ManagementAdmin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-5">

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
        </div>
        <div class="col-md-12 col-sm-12">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.stuff_fullname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.stuff_about)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.stuff_photo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.stuff_phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.stuff_email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.stuff_address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.stuff_salary)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.stuff_birthday)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.stuff_start_date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.stuff_start_time)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.stuff_finish_time)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gender.gender_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MarrigeStatu.status_name)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.OrderBy(o=>o.stuff_fullname))
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.stuff_fullname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.stuff_about)
                            </td>
                            <td>
                                <img src="@item.stuff_photo" style="max-width:100%;max-height:200px;" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.stuff_phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.stuff_email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.stuff_address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.stuff_salary)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.stuff_birthday)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.stuff_start_date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.stuff_start_time)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.stuff_finish_time)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gender.gender_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MarrigeStatu.status_name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.id })
                            </td>
                        </tr>
                    }

            </table>
            </div>
        </div>
    </div>
