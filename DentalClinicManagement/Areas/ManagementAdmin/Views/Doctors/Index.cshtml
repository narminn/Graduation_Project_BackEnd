@model IEnumerable<DentalClinicManagement.Models.Doctor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ManagementAdmin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-5">

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
        </div>
        <div class="col-md-12 col-sm-12">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.doctor_fullname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.doctor_about)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.doctor_photo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.doctor_date_of_birth)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.doctor_phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.doctor_address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.doctor_email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.doctor_education_file)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.doctor_salary)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.doctor_start_time)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.doctor_finish_time)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.doctor_start_date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Department.department_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gender.gender_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MarrigeStatu.status_name)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.OrderBy(i=>i.doctor_fullname))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.doctor_fullname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.doctor_about)
                    </td>
                    <td>
                        <img src="@item.doctor_photo" style="max-width:100%;max-height:200px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.doctor_date_of_birth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.doctor_phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.doctor_address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.doctor_email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.doctor_education_file)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.doctor_salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.doctor_start_time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.doctor_finish_time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.doctor_start_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.department_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender.gender_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MarrigeStatu.status_name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.id })
                    </td>
                </tr>
    }

            </table>
            </div>
        </div>
    </div>
