@model DentalClinicManagement.ViewModel.ReceptionModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Reception/Views/Shared/Layout.cshtml";
}





    <section id="profile">
        <div class="container">
            <div class="row">
                <div class="col-md-3 text-center">
                    <div class="profile_img">

                        <img src="@Model._stuff.stuff_photo" class="img-fluid">
                    </div>
                    <div class="user_about">
                        <h5 style="color:white">@Model._stuff.stuff_fullname</h5>
                        <span style="color:white">@Model._stuff.stuff_about</span>
                    </div>
                    <div class="work_for">
                        <p>
                            <b>Start to work :</b>
                            <span>@Model._stuff.stuff_start_date.ToString().AsDateTime().ToShortDateString()</span>
                        </p>
                    </div>
                    <hr>
                </div>
                <div class="col-md-9">
                    <div class="contain">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="item_title">
                                            <h5> <i class="fas fa-pencil-alt"></i>  Personal Details</h5>
                                        </div>
                                        <div class="item_contain">
                                            <table class="table table-light margin-bottom-0">
                                                <tbody>
                                                    <tr>
                                                        <td> <span class="primry-link">Name</span> </td>
                                                        <td>@Model._stuff.stuff_fullname</td>
                                                    </tr>
                                                    <tr>
                                                        <td><span class="primry-link">DOB</span></td>
                                                        <td>@Model._stuff.stuff_birthday.ToString().AsDateTime().ToShortDateString()</td>
                                                    </tr>
                                                    <tr>
                                                        <td><span class="primry-link">Gender</span></td>
                                                        <td>@Model._stuff.Gender.gender_name</td>
                                                    </tr>
                                                    <tr>
                                                        <td><span class="primry-link">Email</span></td>
                                                        <td>@Model._stuff.stuff_email</td>
                                                    </tr>
                                                    <tr>
                                                        <td><span class="primry-link">Phone</span></td>
                                                        <td>@Model._stuff.stuff_phone</td>
                                                    </tr>

                                                    <tr>
                                                        <td><span class="primry-link">Local Address</span></td>
                                                        <td>@Model._stuff.stuff_address</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="item_title">
                                            <h5><i class="fas fa-briefcase"></i>Company Details</h5>
                                        </div>
                                        <div class="item_contain">
                                            <table class="table table-light margin-bottom-0">
                                                <tbody>
                                                    <tr>
                                                        <td> <span class="primry-link">Employee ID</span> </td>
                                                        <td>@Model._stuff.id</td>
                                                    </tr>


                                                    <tr>
                                                        <td> <span class="primry-link">Date of Joining</span> </td>
                                                        <td>@Model._stuff.stuff_start_date.ToString().AsDateTime().ToShortDateString()</td>
                                                    </tr>
                                                    <tr>
                                                        <td> <span class="primry-link">Work times</span> </td>
                                                        <td>@Model._stuff.stuff_start_time.ToString().AsDateTime().ToShortTimeString() - @Model._stuff.stuff_finish_time.ToString().AsDateTime().ToShortTimeString()</td>
                                                    </tr>
                                                    <tr>
                                                        <td> <span class="primry-link">Salary ($)</span> </td>
                                                        <td>
                                                            <p>
                                                                @Model._stuff.stuff_salary
                                                            </p>

                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="item_title">
                                            <h5><i class="fas fa-bullhorn"></i>Notice Board</h5>
                                        </div>
                                        <div class="item_contain scrool_contain">
                                            @foreach (var item in Model._note)
                                        {
                                        <div class="item">
                                            <div class="date text-center">
                                               
                                                <small>@item.note_date.ToString().AsDateTime().ToShortDateString()</small>
                                            </div>
                                            <a href="#">@item.note_title</a>
                                            <p>@item.note_content</p>
                                        </div>
                                        }
                                      
                                       
                                        
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="item_title">
                                            <h5><i class="far fa-paper-plane"></i>Holidays</h5>
                                        </div>
                                        <div class="item_contain scrool_contain">
                                            @foreach (var item in Model._holiday)
    {
                                        <div class="alert-blocks alert-danger ">
                                            <span>@item.holiday_name</span>
                                            <small class="float-right"><em>@item.holiday_date.ToString().AsDateTime().ToShortDateString()</em></small>
                                        </div>
}
                                           
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

  