@model DentalClinicManagement.ViewModel.MessageModel
@{
    ViewBag.Title = "Messages";
    Layout = "~/Areas/Reception/Views/Shared/Layout.cshtml";
}



    <section id="profile">
        <div class="container">
            <div class="row">
                <div class="col-md-3 text-center">
                    <div class="profile_img">

                        <img src="@Model._stuff.stuff_photo" class="img-fluid">
                    </div>
                    <div class="user_about">
                        <h5 style="color:white">@Model._stuff.stuff_fullname</h5>
                        <span style="color:white">@Model._stuff.stuff_about</span>
                    </div>
                    <div class="work_for">
                        <p>
                            <b>Start to work :</b>
                            <span>@Model._stuff.stuff_start_date</span>
                        </p>
                    </div>
                    <hr>
                </div>
                <div class="col-md-9">
                    <div class="card mb-3">
                        <div class="card-header">
                            <i class="fas fa-tasks"></i> Messages
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>User Name</th>
                                            <th>User Email</th>
                                            <th>Message Subject</th>
                                            <th>Message Text</th>
                                            <th></th>
                                           
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model._message)
    {
                                    <tr>
                                        <td>@item.user_name</td>
                                        <td>@item.user_email</td>
                                        <td>@item.message_subject</td>
                                        <td>@item.message_text</td>
                                        
                                       
                                        <td>
                                            <a href="/Reception/Home/SendEmail" style="color:darkblue;text-decoration:none">Feedback</a>
                                        </td>
                                    </tr>
}
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
